<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    tools:context=".activities.LoginActivity">

    <ScrollView
        android:id="@+id/sv_activity_issue_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll_activity_issue_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_activity_issue_picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary"
                android:padding="20dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_titlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titlu"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_margin="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/tv_activity_issue_created_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Created by: "
                    />
                <TextView
                    android:id="@+id/tv_activity_issue_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_activity_issue_created_by"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_detalii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="detaliiii" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/tv_activity_issue_up_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Created by:"
                    />
                <TextView
                    android:id="@+id/tv_activity_issue_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▲/▼"
                    android:layout_toEndOf="@+id/tv_activity_issue_up_votes"
                    />
                <TextView
                    android:id="@+id/tv_activity_issue_down_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_activity_issue_arrow"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Comments"
                />
            <ListView
                android:id="@+id/lv_activity_issue_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <Button
                android:id="@+id/btn_activity_issue_add_comment"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Add Comment"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>




</LinearLayout>